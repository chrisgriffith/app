.splash--contents
  position absolute
  height 100%
  width 100%
  display flex
  align-content stretch
  align-items stretch
  & > div
    width 100%
    position relative
    a
      position absolute
      width 100%
      height 100%
      top 0
      left 0
.splash--images
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  display flex
  flex-direction column
  align-content stretch
  align-items stretch
  overflow hidden
.splash--image
  &:first-child
    background url('/img/pgday-us.svg') no-repeat center
    background-size contain
    flex-grow 2
  &:last-child
    background url('/img/pgd_logo.svg') no-repeat center
    flex-grow 1
    box-sizing border-box
    margin 60px
.splash--us2016
  background #27A1C5
.splash--eu2016
  background url('/img/pgday-eu-logo.svg') no-repeat center, url('/img/pgday-eu-bg.svg') no-repeat center
  background-size contain, cover
  background-blend-mode multiply
@media only screen and (max-width: 800px)
  .splash--contents
    flex-direction column
    & > div
      height 100%
  .splash--image
    &:first-child
      display none
  .splash--us2016
    background url('/img/buildbot-line.svg') no-repeat center #27A1C5
    background-size cover
